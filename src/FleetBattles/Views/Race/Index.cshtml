@model IEnumerable<FleetBattles.Models.Race>

@{
    ViewData["Title"] = "Index";
}
@await Html.PartialAsync("_ACPNav")
<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adjective)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvatarURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adjective)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvatarURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RaceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RaceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RaceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
